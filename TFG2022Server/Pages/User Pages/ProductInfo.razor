@page "/product/{PathParam}"

@using Syncfusion.Blazor.Notifications
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Buttons
@using TFG2022Server.Extensions

@inject IProductoService ProductoService
@inject ILineaCarritoService LineaCarritoService
@inject IFamiliaProductoService FamiliaProductoService
@inject ProtectedLocalStorage LocalStorage
@inject IUsuarioService UsuarioService
@inject ICarritoService CarritoService
@inject NavigationManager NavigationManager

<div class="col-lg-4 control-section">
    <SfToast @ref="ToastObj" ID="toast_type">
        <ToastPosition X="@ToastPosition"></ToastPosition>
    </SfToast>
</div>

<SfButton CssClass="btn" class="e-btn e-outline e-primary" @onclick="@(()=>NavigationManager.NavigateTo("/"))">⬅ Volver</SfButton>

@if (ProductoData == null)
{
    <div class="e-error">
        <div class="e-error-content">No se ha encontrado el producto.</div>
    </div>
}
else
{
    <main class="container">

        <div class="left-column">
            <img class="active" src=@ProductoData.UrlImagen />
        </div>


        <div class="right-column">

            <div class="product-description">
                <span><SfButton class="e-btn e-outline e-primary" @onclick="@(()=>NavigationManager.NavigateTo("/"+@FamiliaData.FamiliaID))">@FamiliaData.Nombre</SfButton></span>
                <h1>@ProductoData.Nombre</h1>
                <p>@ProductoData.Descripcion</p>
            </div>

            <div class="product-price">
                <span>@priceToString(FinalPriceCalculator.FinalPrice(ProductoData))</span>
                <SfButton class="e-btn e-outline e-primary" @onclick="@(e => addToCarrito(@ProductoData))">🛒 Añadir al carrito</SfButton>
            </div>
        </div>
    </main>
}

<style>

